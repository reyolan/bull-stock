<% if object.errors.any? %>
  <div class="bg-slate-100 flex w-fit rounded m-auto mt-4 mb-6 border border-red-400" id="error_explanation">
    <div class="w-20 bg-red-400 text-xl flex justify-center items-center p-6">
      <div class="border-2 rounded-full p-4 h-12 w-12 flex justify-center items-center text-slate-200">X</div>
    </div>
    <div class="p-4">
      <p class="font-medium text-lg">There <%= format_auxiliary_verb(object.errors.count) %> <%= pluralize(object.errors.count, "error").upcase%> in your submission. </p>
      <ul class="list-disc list-inside">
        <% object.errors.full_messages.each do |message| %>
          <li> <%= message %>. </li>
        <%end%>
      </ul>
    </div>
  </div>
<% end %>
