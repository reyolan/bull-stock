<nav class="flex justify-between items-center h-16 px-5 md:px-16 w-full <%= change_bg_if_admin_or_trader %> relative">
  <%= link_to root_path, class: "text-white text-xl sm:text-2xl font-bold sm:w-auto w-fit" do %>
    <div class="flex gap-3 items-center ">
      <div class="flex gap-2 items-center"><i class="las la-chart-bar"></i>
        <p class="hidden lg:inline-block">BullStock</p>
        <% if user_signed_in? %>
          <p class="text-sm md:text-md lg:text-xl sm:font-medium">| <%= current_user.email %></p>
        <%end%>
      </div>
    </div>
  <% end %>
  <span id="hamburger" class="sm:hidden text-white text-lg font-bold">&#9776;</span>
  <ul id="list" class="hidden gap-0 <%= change_bg_if_admin_or_trader %> flex flex-col absolute top-0 right-0 mt-16 px-4 py-2 text-right sm:mr-0 sm:text-left sm:mt-0 sm:flex-row sm:gap-4 sm:flex sm:static">
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <li><%= link_to "Traders", traders_path, class: "text-xl sm:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
        <li><%= link_to "Transactions", stock_transactions_path, class: "text-xl sm:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
      <% else %>
        <% if current_user.approved? %>
          <li><%= link_to "Balance", trader_balance_path, class: "text-xl sm:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
        <% end %>
        <li><%= link_to "Portfolio", trader_stocks_path, class: "text-xl sm:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
        <li><%= link_to "Settings", edit_user_registration_path, class: "text-xl sm:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
      <% end %>
      <li><%= link_to "Log out", destroy_user_session_path, class: "text-xl sm:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
    <% else %>
    <% end %>
  </ul>
</nav>
