<nav class="flex justify-between items-center h-16 px-5 lg:px-16 w-full <%= change_bg_if_admin_or_trader %> relative">
  <%= link_to root_path, class: "text-white text-xl lg:text-2xl font-bold lg:w-auto w-fit" do %>
    <div class="flex gap-3 items-center ">
      <div class="flex gap-2 items-center"><i class="las la-chart-bar"></i>
        <p class="hidden lg:inline-block">BullStock</p>
        <% if user_signed_in? %>
          <p class="text-sm md:text-md lg:text-xl lg:font-medium">| <%= current_user.email %></p>
        <%end%>
      </div>
    </div>
  <% end %>
  <span id="hamburger" class="lg:hidden text-white text-lg font-bold">&#9776;</span>
  <ul id="list" class="hidden gap-0 w-full lg:w-auto z-10 <%= change_bg_if_admin_or_trader %> flex flex-col absolute top-0 right-0 mt-16 px-4 py-2 text-right lg:mr-0 lg:text-left lg:mt-0 lg:flex-row lg:gap-4 lg:flex lg:static">
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <li><%= link_to "Traders", traders_path, class: "text-xl lg:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
        <li><%= link_to "Transactions", stock_transactions_path, class: "text-xl lg:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
      <% else %>
        <% if current_user.approved? %>
          <li><%= link_to "Balance", trader_balance_path, class: "text-xl lg:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
        <% end %>
        <li><%= link_to "Portfolio", trader_stocks_path, class: "text-xl lg:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
        <li><%= link_to "Transactions", trader_stock_transactions_path, class: "text-xl lg:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
        <li><%= link_to "Settings", edit_user_registration_path, class: "text-xl lg:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
      <% end %>
      <li><%= link_to "Log out", destroy_user_session_path, class: "text-xl lg:text-lg #{change_text_color_if_admin_or_trader} font-medium" %></li>
    <% else %>
      <li><%= link_to "Log In", new_user_session_path, class: "text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"%></li>
    <% end %>
  </ul>
</nav>
