<% provide(:title, "Edit Trader")%>
<%= render 'shared/error_message', object: @trader%>
<%= form_with model: @trader, url: trader_path do |f| %>
  <h1 class='text-3xl font-bold text-center mb-4'>Edit Trader</h1>
  <table class="m-auto">
    <tbody>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Email</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded-xl border-slate-400 focus:border-blue-600 focus:ring-blue-600'%>
        </td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Account Confirmation</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= @trader.confirmed? ? local_time(@trader.confirmed_at,'%a, %b %d, %Y'): "Pending Email Confirmation" %></td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Account Approval</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= @trader.approved? ? "Approved" : "Pending" %></td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Actions</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">
          <%= f.submit "Submit", class: "inline-block cursor-pointer px-6 py-2.5 bg-blue-500 text-white font-medium text-xs leading-tight uppercase rounded-full shadow-md hover:bg-blue-600 hover:shadow-lg focus:bg-green-600 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-700 active:shadow-lg transition duration-150 ease-in-out" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
</div>
