<% if @trader.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@trader.errors.count, "error") %> prohibited this trader from being saved:</h2>
    <ul>
      <% @trader.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>Edit <%= @trader.email%></h2>
<%= form_with model: @trader, url: trader_path do |f| %>
  <table class="m-auto">
    <tbody>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Email</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: @trader.email%>
        </td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Account Confirmation</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= @trader.confirmed? ? "Account Confirmed" : "Pending Email Confirmation" %></td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Account Confirmation</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= @trader.confirmed? ? @trader.confirmed_at.strftime('%a, %b %d, %Y'): "Pending Email Confirmation" %></td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Actions</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">
          <button type="button" class="inline-block px-6 py-2.5 bg-green-500 text-white font-medium text-xs leading-tight uppercase rounded-full shadow-md hover:bg-green-600 hover:shadow-lg focus:bg-green-600 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-green-700 active:shadow-lg transition duration-150 ease-in-out"><%= f.submit "Submit" %></button>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
</div>
