<%= render 'shared/error_message', object: @trader%>
<%= form_with model: @trader, url: traders_path, html: {class: 'bg-slate-100 max-w-lg m-auto p-6 rounded-md mt-4'} do |f| %>
  <h1 class='text-3xl font-bold text-center mb-4'>Register Trader</h1>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",class: 'rounded-md w-full focus:border-blue-600 focus:ring-blue-600'%>
  <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password",class: 'mt-2 rounded-md w-full focus:border-blue-600 focus:ring-blue-600' %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password",class: 'mt-2 rounded-md w-full focus:border-blue-600 focus:ring-blue-600'%>
  <%= f.submit "Create Trader Account", class: 'bg-blue-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-blue-500 mt-4 w-full'  %>
<% end %>
</div>
