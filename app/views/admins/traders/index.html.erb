<h1>Welcome, Admin <%= current_user.email%>!</h1>
<span>Pending</span>
<span> | Create</span>
<table>
  <thread>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Account Confirmation</th>
      <th>Account Approval</th>
      <th>Action</th>
      <tr>
        <thread>
          <tbody>
            <% @traders.each do |t| %>
              <tr>
                <td><%=t.email%></td>
                <td><%=t.role%></td>
                <td><%= t.confirmed_at != nil ? t.confirmed_at.strftime('%a, %b %d, %Y') : "Pending Email Confirmation" %></td>
                <td><%=t.status.upcase%></td>
                <td>Edit | Show | Delete</td>
              </tr>
            <%end%>
          </tbody>
        </table>
