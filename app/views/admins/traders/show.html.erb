<% provide(:title, "#{get_email_username(@trader.email)}")%>
<div class='overflow-auto mt-4 m-auto w-[calc(100%-64px)]'>
  <table class="m-auto">
    <tbody>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Email</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%=@trader.email%></td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Account Confirmation</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= @trader.confirmed? ? "Confirmed" : "Pending" %></td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Account Confirmation</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= @trader.confirmed? ? local_time(@trader.confirmed_at, '%Y-%m-%d %l:%M %p')  : "Pending Email Confirmation" %></td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Account Approval</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= @trader.approved? ? "Approved" : "Pending" %></td>
      </tr>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Actions</td>
        <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= link_to "edit", edit_trader_path(@trader.id), class: "inline-block px-6 py-2.5 bg-purple-600 text-white font-medium text-xs leading-tight uppercase rounded-full shadow-md hover:bg-purple-700 hover:shadow-lg focus:bg-purple-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-purple-800 active:shadow-lg transition duration-150 ease-in-out" %></td>
      </tr>
    </tbody>
  </table>
</div>
