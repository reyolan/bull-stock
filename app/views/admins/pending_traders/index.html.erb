<h1>Welcome, Admin <%= current_user.email%>!</h1>
<span>Traders waiting for account approval</span>
<table>
  <thread>
    <tr>
      <th>Email</th>
      <th>Action</th>
      <tr>
      </thread>
      <tbody>
        <% @pending_traders.each do |t| %>
          <tr>
            <td><%=t.email%></td>
            <td>
              <%= form_with model: t, url: trader_path(t.id), method: :put do |f| %>
                <%= f.check_box :approved%>
                <div class="actions">
                  <%= f.submit "Submit" %>
                </div>
              <% end %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
