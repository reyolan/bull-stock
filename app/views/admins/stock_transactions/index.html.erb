<h1 class='font-bold text-3xl text-center'>Stock Transactions</h1>
<%= link_to "Balance Transactions", balance_transactions_path, class: "bg-blue-400 rounded-md p-2 font-bold hover:bg-blue-500 text-xl" %>
<table class="min-w-full">
  <tr class="border-b bg-blue-100 border-blue-200">
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center"><%= sort_link(@q, :transacted_at, 'Time', default_order: :desc) %></th>
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">Transaction ID</th>
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">User ID</th>
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">Symbol</th>
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">Company Name</th>
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">Unit Price</th>
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">Quantity</th>
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">Amount</th>
    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">Type</th>
  </tr>
  <tbody>
    <% @stock_transactions.each do |t| %>
      <tr class="border-b bg-purple-100 border-purple-200 transition duration-300 ease-in-out hover:bg-blue-100">
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%= local_time(t.created_at, '%Y-%m-%d %l:%M %p')%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%=t.id%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%=t.user_id%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%=t.symbol%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%= t.company_name%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%= t.unit_price%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%= t.quantity%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%= t.amount%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap text-center"><%= t.transaction_type%></td>
      </tr>
    <%end%>
  </tbody>
</table>
