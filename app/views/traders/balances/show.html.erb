<div class= 'bg-slate-100 max-w-lg m-auto p-6 rounded-md mt-4 text-center'>
  <h1 class='text-4xl font-bold'> Account Balance </h1>
  <h2 class='bg-orange-400 font-bold rounded mb-4 text-3xl w-fit m-auto p-4 '><%= dollarize(@balance) %></h2>
  <%= link_to "Deposit", new_deposit_balance_transaction_path, class: 'bg-green-400 rounded-md p-2 font-bold hover:bg-green-500 text-xl' %>
  <% if current_user.balance > 0 %>
    <%= link_to "Withdraw", new_withdraw_balance_transaction_path, class: 'bg-red-400 rounded-md p-2 font-bold hover:bg-red-500 text-xl' %>
  <% end %>
</div>
