<div class= 'bg-slate-100 max-w-lg m-auto p-6 rounded-md mt-4 text-center'>
  <h1 class='text-4xl font-bold'> Account Balance </h1>
  <div class='bg-slate-200 mt-4 p-5 rounded-md'>
    <h2 class='text-white bg-blue-500 hover:bg-blue-600 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 font-bold rounded-xl mb-6 text-3xl m-auto p-4 break-words'><%= number_to_currency(@balance) %></h2>
    <div class='flex flex-wrap gap-2 justify-center'>
      <%= link_to "Deposit", new_deposit_balance_transaction_path, class: 'focus:outline-none text-slate-100 bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800 p-2 font-bold hover:bg-green-500 text-2xl' %>
      <% if current_user.balance > 0 %>
        <%= link_to "Withdraw", new_withdraw_balance_transaction_path, class: 'focus:outline-none text-slate-100 bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 p-2 font-bold hover:bg-red-500 text-2xl' %>
      <% end %>
    </div>
  </div>
</div>
