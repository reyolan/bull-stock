<div class='flex flex-col items-center'>
  <div class='flex flex-wrap gap-4 justify-center'>
    <%= link_to "#{display_purchase_or_search} Stock", new_search_stock_path, class: 'bg-green-400 rounded-md p-2 font-bold hover:bg-green-500 text-xl' %>
    <%= link_to 'Show Portfolio', trader_stocks_path, class: 'bg-green-400 rounded-md p-2 font-bold hover:bg-green-500 text-xl'%>
    <%= link_to "Show Balance Transactions", trader_balance_transactions_path, class: 'bg-green-400 rounded-md p-2 font-bold hover:bg-green-500 text-xl' %>
  </div>
  <hr class='border border-black w-full my-4'>
  <div class='bg-slate-100 border border-slate-300 rounded-lg py-4 px-8 w-[calc(100%-64px)]'>
    <div class='flex flex-wrap justify-between m-auto items-center gap-2'>
      <h1 class='font-bold text-3xl'> SELL Transactions </h1>
      <div class='flex flex-wrap gap-2'>
        <%= link_to 'Stock Transactions', trader_stock_transactions_path, class: 'bg-blue-400 rounded-md p-2 font-bold hover:bg-blue-500 text-xl'%>
        <%= link_to 'BUY Transactions', buy_stock_transactions_path, class: 'bg-green-500 rounded-md p-2 font-bold hover:bg-green-600 text-xl'%>
      </div>
    </div>
    <div class='overflow-auto mt-2 mx-auto'>
      <table class='bg-red-200 w-full'>
        <thead>
          <tr class='bg-red-500 text-lg'>
            <th class='p-2'>Time</th>
            <th class='p-2'>Transaction Type</th>
            <th class='p-2'>Symbol</th>
            <th class='p-2'>Company Name</th>
            <th class='p-2'>Quantity</th>
            <th class='p-2'>Unit Price</th>
            <th class='p-2'>Amount</th>
          </tr>
        </thead>
        <tbody>
          <%= render @sell_transactions %>
        </tbody>
      </table>
    </div>
  </div>
</div>
