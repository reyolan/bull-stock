<%= render 'shared/error_message', object: @transaction %>
<div class= 'bg-slate-100 max-w-lg m-auto p-6 rounded-md mt-4 text-center'>
  <div class='flex items-center justify-center gap-2'>
    <%#= image_tag(@logo.url, size: '48')%>
    <h1 class='text-center text-4xl font-bold'> <%= @quote.symbol %> </h1>
  </div>
  <div class='mt-2 bg-slate-200 grid grid-cols-2 gap-x-1 w-auto m-auto p-4 rounded-md'>
    <p class='text-xl text-right font-bold'>Company Name: </p>
    <p class='text-left text-xl'><%= @quote.company_name %></p>
    <p class='text-xl text-right font-bold'>Price: </p>
    <p class='text-left text-xl'><%= dollarize(@quote.latest_price) %></p>
  </div>
  <% if current_user.approved? %>
    <%= form_with scope: :buy_transaction, url: buy_stock_transactions_path, class: 'mt-2' do |f| %>
      <%= f.hidden_field :symbol, value: @quote.symbol %>
      <%= f.hidden_field :company_name, value: @quote.company_name %>
      <%= f.hidden_field :unit_price, value: @quote.latest_price %>
      <%= f.label :quantity, "Purchase a share of #{@quote.symbol}:", class: 'text-xl'%>
      <%= f.number_field :quantity, step: 0.1, min: 0.1, class: 'rounded-lg border-slate-300 focus:border-green-600 focus:ring-green-600 mt-2 w-full text-center text-xl', placeholder: 'Number of shares to buy (e.g. 1, 2, 0.5, 1.5)' %>
      <%= f.submit "Purchase Stock", class: 'bg-green-500 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-green-600 mt-4 w-full' %>
    <% end %>
  <% else %>
    <p class='bg-red-400 text-center rounded-md p-4 text-xl font-bold my-4'> Please wait for admin approval to purchase a stock. </p>
  <% end %>
  <hr class="border-black my-2">
  <%=link_to 'Search another stock', new_search_stock_path, class: 'text-green-600 hover:underline font-medium text-lg'%>
</div>
