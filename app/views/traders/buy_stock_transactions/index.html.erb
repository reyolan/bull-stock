<div class='flex flex-col items-center'>
  <div class='bg-slate-100 border border-slate-300 rounded-lg py-4 px-8 w-[calc(100%-64px)]'>
    <div class='flex flex-wrap justify-between m-auto items-center gap-2'>
      <h1 class='font-bold text-3xl'> BUY Transactions </h1>
      <div class='flex flex-wrap gap-2 text-center'>
        <%= link_to "Stock Transactions", trader_stock_transactions_path, class: 'bg-blue-400 rounded-md p-2 font-bold hover:bg-blue-500 text-xl' %>
        <%= link_to 'SELL Transactions', sell_stock_transactions_path, class: 'bg-red-400 rounded-md p-2 font-bold hover:bg-red-500 text-xl'%>
      </div>
    </div>
    <% if @buy_transactions.count.zero? %>
      <h2 class='text-center font-bold text-3xl bg-green-400 rounded w-fit m-auto p-4 rounded-md mt-4'>No BUY Transactions to show.</h2>
    <% else %>
      <div class='overflow-auto mt-2 mx-auto'>
        <table class='bg-green-200 w-full'>
          <thead>
            <tr class='bg-green-500 text-lg'>
              <th class='p-2'>Time</th>
              <th class='p-2'>Stock Transaction ID</th>
              <th class='p-2'>Symbol</th>
              <th class='p-2'>Company Name</th>
              <th class='p-2'>Quantity</th>
              <th class='p-2'>Unit Price</th>
              <th class='p-2'>Amount</th>
              <th class='p-2'>Type</th>
            </tr>
          </thead>
          <tbody>
            <%= render @buy_transactions %>
          </tbody>
        </table>
      </div>
      <%= paginate @buy_transactions, color: 'green' %>
    <% end %>
  </div>
</div>
