<div class= 'bg-slate-100 max-w-lg m-auto p-6 rounded-md mt-4 text-center'>
  <h1 class='text-center text-5xl font-bold'> <%= display_purchase_or_search %> Stock </h1>
  <%= form_with url: search_stocks_path, class: 'mt-2' do |form| %>
    <%= form.label :symbol, "Input the symbol you want to #{display_purchase_or_search.downcase}:", class: 'text-xl' %>
    <%= form.text_field :symbol, class: 'rounded focus:border-green-600 focus:ring-green-600 mt-2' %>
    <div>
      <%= form.submit "#{display_purchase_or_search} Stock", class: 'bg-green-500 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-green-600 mt-4 w-full' %>
    </div>
  <% end %>
  <hr class="border-black my-2">
  <p> Not sure about all the eligible symbols? <%= link_to 'Click here', 'https://iextrading.com/trading/eligible-symbols/', class: 'text-green-600 hover:underline font-medium' %> </p>
</div>
