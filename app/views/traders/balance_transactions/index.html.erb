<div class='flex flex-col items-center'>
  <div class='flex flex-wrap gap-4 justify-center'>
    <%= link_to "#{display_purchase_or_search} Stock", new_search_stock_path, class: 'bg-green-400 rounded-md p-2 font-bold hover:bg-green-500 text-xl' %>
    <%= link_to 'Show Portfolio', trader_stocks_path, class: 'bg-green-400 rounded-md p-2 font-bold hover:bg-green-500 text-xl'%>
    <%= link_to 'Show Stock Transactions', trader_stock_transactions_path, class: 'bg-blue-400 rounded-md p-2 font-bold hover:bg-blue-500 text-xl'%>
  </div>
  <hr class='border border-black w-full my-4'>
  <div class='bg-slate-100 border border-slate-300 rounded-lg py-4 px-8  w-[calc(100%-64px)]'>
    <div class='flex flex-wrap justify-between m-auto items-center gap-2'>
      <h1 class='font-bold text-3xl'> Balance Transactions </h1>
      <div class='flex flex-wrap gap-2 text-center'>
        <%= link_to 'DEPOSIT Transactions', deposit_balance_transactions_path, class: 'bg-green-500 rounded-md p-2 font-bold hover:bg-green-600 text-xl'%>
        <%= link_to 'WITHDRAW Transactions', withdraw_balance_transactions_path, class: 'bg-red-400 rounded-md p-2 font-bold hover:bg-red-500 text-xl'%>
      </div>
    </div>
    <% if @balance_transactions.count.zero? %>
      <h2 class='text-center font-bold text-3xl bg-blue-400 rounded w-fit m-auto p-4 rounded-md mt-4'>No Balance Transactions to show.</h2>
    <% else %>
      <div class='overflow-auto mt-2 mx-auto'>
        <table class='bg-blue-100 w-full'>
          <thead>
            <tr class='bg-blue-500 text-lg'>
              <th class='p-2'>Time</th>
              <th class='p-2'>Balance Transaction ID</th>
              <th class='p-2'>Amount</th>
              <th class='p-2'>Type</th>
            </tr>
          </thead>
          <tbody>
            <%= render @balance_transactions %>
          </tbody>
        </table>
      </div>
      <%= paginate @balance_transactions, color: 'blue' %>
    <% end %>
  </div>
</div>
